{
  "name": "chrome extension",
  "version": "1.0",
  "description": "Ectention for showing IMDB ratings on NETFLIX",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["ratting.css"]
    }
  ],
  "icons": { "16": "imdb.png" },
  "web_accessible_resources": ["ratting.js"],
  "browser_action": {
    "default_icon": "imdb.png",
    "default_popup": "popup.html"
  }
}
