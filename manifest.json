{
	"name": "extension",
	"version": "1.0",
	"manifest_version": 2,

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"css": ["ratting.css"]
		}
	],
	"icons": { "64": "imdb.png" },
	"web_accessible_resources": ["ratting.js"]
}
